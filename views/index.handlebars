<h1>Umami Burger</h1>

<h2>Experience the Umami</h2>

<ul>
  {{#each burger}}
    {{#unless this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="true">
          <button class='btn' type="submit">Devour</button>
        </form>

        {{devour-burger}}
      </li>
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers you've devoured</h2>

<ul>
  {{#each burger}}
    {{#if this.devoured}}
      <li>
        {{this.burger_name}}

        <form action="/{{this.id}}?_method=PUT" method="POST">
          <input type="hidden" name="devoured" value="false">
          <button type="submit">Throw Up!</button>
        </form>

        {{> burgers/devour-burger}}
      </li>
    {{/if}}
  {{/each}}
</ul>

<h2>Add A New Burger</h2>
<form class="create-update-form" action="/" method="POST">

  <div class="form-group">
    <label for="newburger">Burger Name:</label>
    <input type="text" id="newburger" name="burger_name">
  </div>

  <div class="form-group">
    <label for="devour">Devoured?</label><br>
    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
    <input type="radio" name="devoured" value="0"> Thrown Up
  </div>

  <button type="submit">Add Burger</button>
</form>