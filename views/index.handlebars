<h1>Burger Eats</h1>

<h3>Add the movies you plan to watch</h3>

<ul>
  {{#each movies}}
  	<li>
  	   <p>ID: {{this.id}}</p>
       <p>Movie: {{this.movie}} 
       <form action = ‘/{{this.id}}?_method=DELETE’ method=‘POST’> 	<button type="submit">Delete</button></form></p>
  	</li>
  {{/each}}
</ul>

<form action="/" method="POST">
	<textarea type="text" name="movie"></textarea>

	<button type="submit">Submit</button>
</form>
<hr/>
<form action="/?_method=PUT" method="POST" class="button-size">
  <input type="text" name="id" placeholder="id">
    <textarea type="text" name="movie" placeholder="movie"></textarea>
    <button type="submit">Update the Movie!</button>
</form>


